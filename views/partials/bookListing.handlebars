<div class="container book">
  <div class="card text-dark shadow mb-3 p-3">
    <div class="row">
      <div class="col-6">
        <h2><a href="/book/{{id}}">{{title}}</a></h2>
        <p>by
            {{#each authors}}
                {{firstname}} {{lastname}}
            {{/each}}
        </p>
        <p>Published {{format_date originalPublishedDate}}</p>
        {{#if seriesid}}
            #{{seriesorder}} of the {{series.seriesname}} series
        {{/if}}
        {{!-- <button class="btn btn-dark" id="editBtn" data-id="{{id}}">Edit</button>
        <button class="btn btn-dark" id="deleteBtn" data-id="{{id}}">Delete</button> --}}
      </div>
      <div class="col-3">
        <h5>Genre</h5>
        {{#each lookups}}
            {{#if (compare class '===' "genre")}}
                {{detailname}}
            {{/if}}
        {{/each}}
    </div>
    <div class="col-3">
        <h5>Locations</h5>
        {{#each lookups}}
            {{#if (compare class '===' "location")}}
                {{detailname}}
            {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</div>